%header#content-header
  %h1
    Sign In

= form_tag(session_path) do
  %fieldset
    %ol
      %li.required
        = label_tag :email
        = email_field_tag :email, nil, required: true, autofocus: true, size: 40
      %li.required
        = label_tag :password
        = password_field_tag :password, nil, required: true, size: 40
    %p
      = submit_tag 'Sign In'

%p
  No account yet? 
  = link_to 'Sign up!', signup_path